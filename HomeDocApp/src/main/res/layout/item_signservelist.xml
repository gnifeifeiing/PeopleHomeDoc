<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FBFBFB"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_doc_hos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="高血压管理包   季度随访一次"
        android:textColor="@color/defaulttextcolor"
        android:textSize="@dimen/et_text_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/tv_doc_hos"
        android:layout_toRightOf="@+id/tv_doc_hos"
        android:layout_toEndOf="@+id/tv_doc_hos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/tv_doc_hos"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="预约服务时间：2016-9-30 下午"
        android:layout_marginTop="5dp"
        android:textColor="@color/defaulttextcolor"
        android:id="@+id/textView3"
        android:layout_below="@+id/tv_doc_hos"
        android:layout_alignLeft="@+id/tv_doc_hos"
        android:layout_alignStart="@+id/tv_doc_hos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="实际服务时间：2016-9-29 上午"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/defaulttextcolor"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="10dp"
        android:textColor="#003EFE"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView7"
        android:textColor="#FF0000"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:id="@+id/button3"
        android:background="#9ACD6B"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>