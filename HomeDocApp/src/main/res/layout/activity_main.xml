<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_border"
        android:orientation="vertical"></LinearLayout>

    <View
        android:id="@+id/view_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ccc"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/ccc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_home_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@mipmap/home_frag" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="#2fad68"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_service_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@mipmap/signing_frag" />

            <TextView
                android:id="@+id/tab_service_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="服务"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_signing"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_signing_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@mipmap/signing_frag" />

            <TextView
                android:id="@+id/tab_signing_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我要签约"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_chat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_chat_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@mipmap/doc_frag" />

            <TextView
                android:id="@+id/tab_chat_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="咨询"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_user_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@mipmap/user_frag" />

            <TextView
                android:id="@+id/tab_user_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/signing_round" />
    <ImageView
        android:layout_width="26dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/signing_search" />
</RelativeLayout>